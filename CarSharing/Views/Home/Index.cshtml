
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search Page</title>
</head>
<body>
    <h2>Search Page</h2>
    <div class="form">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="searchSection">
                    Pickup
                    @{var pickupDateTime = DateTime.Today.AddDays(2.5);}
                    <div class="row">
                        <div class="cell"><input type="text" id="pickupLocation" name="pickupLocation" value="return location" /></div>
                    </div>
                    <div class="row">
                        <div class="cell"><input type="date" id="pickupDate" name="pickupDate" value="@pickupDateTime.ToString("yyyy-MM-dd")" /></div>
                        <div class="cell"><input type="time" id="pickupTime" name="pickupTime" value="@pickupDateTime.ToString("HH:mm")" /></div>
                    </div>
                </div>
                <div class="searchSection">
                    Return
                    @{var returnDateTime = pickupDateTime.AddDays(1.25);}
                    <div class="row">
                        <div class="cell"><input type="text" id="returnLocation" name="returnLocation" value="return location"/></div>
                    </div>
                    <div class="row">
                        <div class="cell"><input type="date" id="returnDate" name="returnDate" value="@returnDateTime.ToString("yyyy-MM-dd")" /></div>
                        <div class="cell"><input type="time" id="returnTime" name="returnTime" value="@returnDateTime.ToString("HH:mm")" /></div>
                    </div>
                </div>
            </div>
            <input type="submit" value="Search" />
        }
    </div>
</body>
</html>
